<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStarted"
    android:background="@drawable/getstarted">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start shopping now with the best offers and discounts"
        android:layout_above="@id/getstarted_btn"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="15dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="27sp"/>

    <Button
        android:id="@+id/getstarted_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_getstarted"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:background="@drawable/green_button"
        android:padding="17dp"
        android:text="Get Started"
        android:textColor="@drawable/button_text_color"
        android:textSize="25sp" />

<LinearLayout
    android:id="@+id/layout_getstarted"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:paddingStart="70dp"
        android:textColor="@color/black"
        android:text="Have an account?"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/getstarted_tv_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/DarkGreen"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>

</RelativeLayout>