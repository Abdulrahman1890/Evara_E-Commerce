<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:src="@drawable/clothes"
                />
            <TextView
                android:id="@+id/title_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men Clothes - Vest &amp; Shoes"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="59.99$"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/Green"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginLeft="-50dp"
                    android:progressBackgroundTint="@color/yellow"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(14) reviews"
                    android:layout_marginStart="-50dp"
                    android:layout_marginTop="-7dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/prod_item_dec"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/remove_circle_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/prod_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="@color/black"
                android:text="1"
                android:textSize="20sp" />



            <ImageButton
                android:id="@+id/prod_item_inc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/add_circle_24"
                tools:ignore="SpeakableTextPresentCheck" />


</LinearLayout>
            <TextView
                android:id="@+id/short_description_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="short description"
                android:textSize="25sp"
                android:layout_margin="10dp"
                />

            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_button"
                android:padding="17dp"
                android:text="Add To Cart"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textColor="@drawable/button_text_color"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/long_description_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" This is the details of the product \n This is the details of the product \n This is the details of the product"
                android:textSize="25sp"
                android:layout_marginStart="10dp"
                />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>